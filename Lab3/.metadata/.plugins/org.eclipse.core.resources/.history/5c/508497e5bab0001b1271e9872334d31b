//Funkcja uruchamiana z przerwaniem po przepelnieniu licznika w timer1
ISR(TIMER1_COMPA_vect) {

	//Dodaj zmienn¹ globaln¹ K, wstaw funkcje, która bêdzie zmienia³a zmienn¹ K

	if(bit_is_clear(PINB,4)){
		i--;
		seg7ShowCyfra(i);
	}
	else{
		i = 10;
	}

	if(i == 0){

		sbi(PORTB,PB0);
		_delay_ms(5000);
		cbi(PORTB,PB0);
		i = 10;
	}

}
